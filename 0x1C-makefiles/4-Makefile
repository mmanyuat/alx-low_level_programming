CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Wextra -Werror -pedantic

.PHONY: all clean oclean fclean re

all : $(NAME)
$(NAME): $(OBJ)
	 $(CC)  $(CFLAGS) $(OBJ) -o $(NAME)
clean : 
	$(RM) *~ $(OBJ)
oclean:
	$(RM) $(OBJ)
fclean: clean
	$(RM) $(NAME)
re: fclean all


